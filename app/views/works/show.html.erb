<div data-controller="scroll"
     data-action="resize@window->scroll#layout"
     data-scroll-offset="0.65"
     data-scroll-threshold="0.15"
     data-scroll-amplify_rate="3">
<%= render partial: 'shared/thape_nav', locals: { nav_background: 'transparent', show_debug: false } -%>

<div x-data="{ activeSlide: 1, slides: [1, 2, 3] }"
  data-controller="carousel"
  data-carousel-refresh-interval="5000">
  <%= image_pack_tag 'media/images/work-item-h1.jpg', 'x-show': 'activeSlide === 1' -%>
  <%= image_pack_tag 'media/images/work-item-h2.jpg', 'x-show': 'activeSlide === 2' -%>
  <%= image_pack_tag 'media/images/work-item-h3.jpg', 'x-show': 'activeSlide === 3' -%>

  <div class="w-full flex items-center justify-center px-48 mt-4">
    <button
      class="bg-gray-100 text-black6c hover:text-grey-500 font-bold hover:shadow-lg rounded-full w-12 h-12 -ml-6"
      x-on:click="activeSlide = activeSlide === 1 ? slides.length : activeSlide - 1">
      &#8592;
    </button>
    <button
      class="bg-gray-100 text-black6c hover:text-grey-500 font-bold hover:shadow rounded-full w-12 h-12 -mr-6"
      data-target="carousel.nextSlide"
      x-on:click="activeSlide = activeSlide === slides.length ? 1 : activeSlide + 1">
      &#8594;
    </button>
  </div>
</div>

