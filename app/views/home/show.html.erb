    <%= render partial: 'project_square',
      locals: { prj_image: 'media/images/grid-1-3.jpg', prj_class: 'grid-div col-span-2 hidden lg:block',
                title: '文化空间', sub_title: '苏州高新区文体中心' } %>
    <%= render partial: 'project_square',
      locals: { prj_image: 'media/images/grid-2-1.jpg', prj_class: 'grid-div hidden md:block',
                title: '展示区 / 示范区', sub_title: '金科 · 龙里国学艺术馆' } %>
    <%= render partial: 'project_square',
      locals: { prj_image: 'media/images/grid-2-3.jpg', prj_class: 'grid-div hidden md:block',
                title: '城市设计 / 更新', sub_title: '新世界百货大楼改造' } %>
