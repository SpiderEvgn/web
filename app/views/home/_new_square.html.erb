<div class="flex-1 relative overflow-hidden border border-thape-dark-gray" x-data="{ show_text: false }" x-on:mouseenter="show_text = true" x-on:mouseleave="show_text = false" style="min-width: 24rem;">
  <%= link_to news_path(id: info.id) do %>
    <img src="<%= asset_pack_path(news_image) -%>" class="w-full h-full" x-bind:class="{ 'filter-blur': show_text }" />
    <div class="absolute bg-thape-white-t95 top-0 left-0 h-full flex flex-col justify-between w-2/3 pointer-events-none"
      x-transition:enter="transition ease-linear duration-200"
      x-transition:enter-start="opacity-0 transform -translate-x-1/2"
      x-transition:enter-end="opacity-100 transform translate-x-0"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 transform translate-x-0"
      x-transition:leave-end="opacity-0 transform -translate-x-1/2"
      x-show="show_text">
      <div class="my-6 mx-6">
        <p class="text-3xl text-justify font-bold"><%= Date::ABBR_MONTHNAMES[info.created_at.month] -%></p>
        <p class="text-5xl text-justify tracking-widest font-bold leading-9"><%= info.created_at.day -%></p>
      </div>
      <div class="mb-10 mx-6">
        <p class="font-medium text-2xl xxl:text-3xl text-left pb-1 leading-snug text-justify"><%= info.title -%></p>
        <p class="font-light xxl:text-lg text-left leading-6 mt-2"><%= info.sub_title -%></p>
      </div>
    </div>
  <% end %>
</div>
