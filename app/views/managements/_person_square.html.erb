<div class="<%= person_class -%>">
  <%= image_tag person.avatar.url, class: 'grid-image grid-mask-image' -%>
  <div class="absolute text-white inset-x-0 bottom-0">
    <p class="text-lg text-center font-medium"><%= link_to person.name, management_path(id: person.id) -%></p>
    <p class="text-sm text-center font-light leading-snug"><%= person.title -%></p>
  </div>
</div>
