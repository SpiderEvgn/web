<%= render partial: 'shared/thape_nav'  -%>

<div class="relative mt-12">
  <%= image_pack_tag 'media/images/people-banner.jpg', class: "hidden sm:block" -%>
  <%= image_pack_tag 'media/images/people-banner-mobile-1.jpg', class: "block sm:hidden" -%>
  <div class="hidden sm:flex absolute inset-0 w-full justify-center items-center">
    <%= image_pack_tag 'media/images/people-title.png', class: 'h-32 sm:h-40 md:h-48 lg:h-56 xl:h-64' -%>
  </div>
  <div class="hidden sm:flex absolute inset-0 w-full flex-col justify-center items-center">
    <h1 class="<%= ('text-xl sm:text-2xl md:text-3xl lg:text-4xl') -%> text-white text-center font-medium tracking-widest -ml-32">己欲立而立人</h1>
    <h1 class="<%= ('text-xl sm:text-2xl md:text-3xl lg:text-4xl') -%> text-white text-center font-medium tracking-widest -mr-32">己欲达而达人</h1>
  </div>
</div>
<div class="relative">
  <%= render partial: 'search_form' %>

  <% if @management_people.present? %>
    <div class="w-full mx-auto sm:py-4 md:py-8 px-2 md:px-6 lg:px-8 xl:px-10 xxl:px-12 xxxl:px-16">
      <%= render partial: 'shared/header', locals: { c: '集团管理团队', e: 'MANAGEMENT',
        header_path: leadership_index_path, header_class: 'pt-0', show_header_right: false } %>
    </div>

    <div class="w-full mx-auto px-1 md:px-3 lg:px-4 xl:px-5 xxl:px-6 xxxl:px-8 mb-1 md:mb-3 lg:mb-4 xl:mb-5 xxl:mb-6 xxxl:mb-8">
      <div class="flex-grid">
        <div class="flex-grid-box flex-grid-cols-2-gap-1 sm:flex-grid-cols-2-gap-2 md:flex-grid-cols-3-gap-2 lg:flex-grid-cols-4-gap-2 xxl:flex-grid-cols-6-gap-2">
        <% @management_people.each do |person| %>
          <%= render partial: 'person_square',
            locals: { person: person, person_class: 'grid-div', city: City.find_by!(company_name: '天华集团') } %>
        <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @speciality_people.present? %>
    <div class="w-full mx-auto sm:py-4 md:py-8 px-2 md:px-6 lg:px-8 xl:px-10 xxl:px-12 xxxl:px-16">
      <%= render partial: 'shared/header', locals: { c: '集团专业团队', e: 'PROFESSIONAL',
        header_path: leadership_index_path, header_class: 'pt-0', show_header_right: false } %>
    </div>

    <div class="w-full mx-auto px-1 md:px-3 lg:px-4 xl:px-5 xxl:px-6 xxxl:px-8 mb-1 md:mb-3 lg:mb-4 xl:mb-5 xxl:mb-6 xxxl:mb-8">
      <div class="flex-grid">
        <div class="flex-grid-box flex-grid-cols-2-gap-1 sm:flex-grid-cols-2-gap-2 md:flex-grid-cols-3-gap-2 lg:flex-grid-cols-4-gap-2 xxl:flex-grid-cols-6-gap-2">
        <% @speciality_people.each do |person| %>
          <%= render partial: 'person_square',
            locals: { person: person, person_class: 'grid-div', city: City.find_by!(company_name: '天华集团') } %>
        <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @management_people.blank? && @speciality_people.blank? %>
    <div class="flex mt-0 pt-20 sm:pt-32 pb-12 justify-center flex-wrap">
      <img class="flex-none" style="margin-left: 1rem" src="<%= asset_pack_path('media/images/no-data.png') -%>">
      <p class="w-full flex-none text-center mt-3" style="color: #b2b2b2;">暂无搜索结果</p>
    </div>
  <% end %>
</div>

<%= render partial: 'shared/footer' %>
