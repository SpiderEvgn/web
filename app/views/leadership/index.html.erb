<%= render partial: 'shared/thape_nav', locals: { nav_background: 'white', show_debug: false } -%>

<div class="relative">
  <%= image_pack_tag 'media/images/people-banner.jpg', class: "pt-12" -%>
  <div class="absolute inset-0 w-full flex justify-center items-center pt-12">
    <%= image_pack_tag 'media/images/people-title.png', class: 'h-32 sm:h-40 md:h-48 lg:h-56 xl:h-64' -%>
  </div>
  <div class="absolute inset-0 w-full flex flex-col justify-center items-center pt-12">
    <h1 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl text-white text-center font-medium tracking-widest -ml-32">引领生活方式</h1>
    <h1 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl text-white text-center font-medium tracking-widest -mr-32">助力城市发展</h1>
  </div>
</div>

<div class="w-full mx-auto sm:py-4 md:py-8 px-2 md:px-6 lg:px-8 xl:px-10 xxl:px-12 xxxl:px-16">
  <%- content_for :header_right do %>
    <div class="inline-block float-right">
      <%= render partial: 'search_form' %>
    </div>
  <% end %>
  <%= render partial: 'shared/header', locals: { c: '集团管理团队', e: 'MANAGEMENT', header_path: leadership_index_path, header_class: 'pt-0' } %>
</div>

<div class="w-full mx-auto px-1 md:px-3 lg:px-4 xl:px-5 xxl:px-6 xxxl:px-8">
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xxl:grid-cols-6 gap-1 sm:gap-2">
    <% @management_people.each do |person| %>
      <%= render partial: 'person_square',
        locals: { person: person, person_class: 'grid-div' } %>
    <% end %>
  </div>
</div>

<div class="w-full mx-auto sm:py-4 md:py-8 px-2 md:px-6 lg:px-8 xl:px-10 xxl:px-12 xxxl:px-16">
  <%= render partial: 'shared/header', locals: { c: '集团专业团队', e: 'PROFESSIONAL', header_path: leadership_index_path, header_class: 'pt-0' } %>
</div>

<div class="w-full mx-auto px-1 md:px-3 lg:px-4 xl:px-5 xxl:px-6 xxxl:px-8">
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xxl:grid-cols-6 gap-1 sm:gap-2">
    <% @speciality_people.each do |person| %>
      <%= render partial: 'person_square',
        locals: { person: person, person_class: 'grid-div' } %>
    <% end %>
  </div>
</div>


<%= render partial: 'shared/footer' %>
