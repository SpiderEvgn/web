<%= render partial: 'shared/thape_nav'  -%>

<div>
<div class="w-3/4 mx-auto flex pt-28 max-sm:flex-wrap max-sm:w-full max-sm:mx-0 max-sm:px-4 max-sm:pt-16">
  <div class="w-1/3 max-sm:w-full max-sm:text-center">
    <% if @person.photo.url.present? %>
      <%= image_tag(@person.photo.url, class: 'w-3/4 max-sm:inline-block max-sm:w-full') %>
    <% else %>
      <%= image_pack_tag 'media/images/default_avatar.jpg', class: "w-3/4 max-sm:inline-block max-sm:w-full" -%>
    <% end %>
    <div class="pt-10 w-3/4 max-sm:hidden">
      <% if @infos.present? %>
        <h3 class="text-black6c <%= fdsz('text-sm') -%>">相关阅读</h3>
        <% @infos.each do |info| %>
          <figure class="flex mt-1 mb-4 xxxl:mt-3 xxxl:mb-6">
            <div class="w-1/2">
              <%= image_tag info.snapshot.url -%>
            </div>
            <div class="w-1/2 flex flex-col justify-between">
              <figcaption class="ml-2 <%= fdsz('text-xs xxl:text-sm xxxl:text-base') -%> text-gray-700 text-justify"><%= info.title -%></figcaption>
              <p class="ml-2 font-light <%= fdsz('text-xs xxl:text-sm xxxl:text-base') -%> text-gray-700"><%= info.created_at.to_date -%></p>
            </div>
          </figure>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="w-2/3 ml-20 pb-12 max-sm:w-full max-sm:mx-0 max-sm:mt-4">
    <h1 class="font-medium text-3xl max-sm:text-2xl"><%= @person.name %></h1>
    <h2 class="pt-3 pb-7 <%= fdsz('text-xl max-sm:text-base') -%> max-sm:pt-2 max-sm:pb-4"><%= simple_format @person.title %></h2>
    <div class="<%= fdsz('max-sm:text-sm') -%>">
      <%= raw @person.introduce %>
    </div>
  </div>
  <div class="w-full hidden max-sm:block">
    <% if @infos.present? %>
      <h3 class="text-black6c <%= fdsz('text-sm') -%>">相关阅读</h3>
      <% @infos.each do |info| %>
        <figure class="flex mt-1 mb-4 xxxl:mt-3 xxxl:mb-6">
          <div class="w-1/3">
            <%= image_tag info.snapshot.url -%>
          </div>
          <div class="w-2/3 flex flex-col justify-between">
            <figcaption class="ml-2 <%= fdsz('text-xs xxl:text-sm xxxl:text-base') -%> text-gray-700 text-justify"><%= info.title -%></figcaption>
            <p class="ml-2 font-light <%= fdsz('text-xs xxl:text-sm xxxl:text-base') -%> text-gray-700"><%= info.created_at.to_date -%></p>
          </div>
        </figure>
      <% end %>
    <% end %>
  </div>
</div>
</div>

<%= render partial: 'shared/footer' %>
