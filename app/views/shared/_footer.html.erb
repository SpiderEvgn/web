        <div class="hidden md:flex items-left justify-between w-full md:w-auto">
          <a href="<%= root_path -%>">
            <%= render partial: 'shared/logo', locals: { className: 'fill-current text-black6c h-8 w-48 sm:h-10', svgId: 'thape-footer-logo' } -%>
