<%= render partial: 'shared/thape_nav', locals: { nav_background: 'transparent', show_debug: false } -%>

<div data-controller="service"
     data-action="resize@window->service#layout">

<div class="relative h-screen">
  <%= image_pack_tag background_img, data: { target: "service.bgImg" } -%>
  <div class="absolute bottom-0 inset-x-0 bg-thape-white-t80 h-56 xxl:h-48" data-target="service.introDiv">
    <div class="text-black6c sm:flex h-full px-10 sm:px-20 md:px-32 lg:px-40 xl:px-48 xxl:px-56 xxxl:px-64">
      <dt class="flex flex-col justify-center font-medium px-5">
        <h1 class="text-3xl font-bold whitespace-no-wrap"><%= chinese_title -%></h1>
        <h2 class="text-xl font-medium whitespace-no-wrap"><%= english_title -%></h2>
        <% if defined? link_site_url %>
          <div class="pt-8">
            <a href="<%= link_site_url -%>" class="font-light border-black6c border-solid border-b opacity-100"><%= link_site_title -%></a>
          </div>
        <% end %>
      </dt>
      <dd class="flex flex-col justify-center font-normal text-justify xxxl:text-lg text-base px-5">
        <p><%= p1 -%></p>
        <p><%= p2 -%></p>
      </dd>
    </div>
  </div>
</div>
</div>
